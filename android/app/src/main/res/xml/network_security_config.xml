<?xml version="1.0" encoding="utf-8"?>
<!--
  Network Security Configuration for Production (L1 - Library)

  L1 uses JS-level pinning only (react-native-ssl-public-key-pinning).
  No native certificate pinning - makes it easier to bypass with Frida.

  Trusts the self-signed backend certificate globally (any IP/domain).
  Cleartext allowed for emulator IPs only.
-->
<network-security-config>
    <!-- Trust self-signed cert globally -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="@raw/backend_cert" />
        </trust-anchors>
    </base-config>

    <!-- Allow cleartext for emulator host IPs -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">10.0.3.2</domain>
    </domain-config>
</network-security-config>
