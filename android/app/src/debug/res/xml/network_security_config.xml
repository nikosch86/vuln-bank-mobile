<?xml version="1.0" encoding="utf-8"?>
<!--
  Network Security Configuration for Debug Builds (L1 - Library)

  This config allows:
  - Localhost connections for Metro bundler
  - User-installed certificates for debugging with proxies

  L1 uses JS-level pinning only (react-native-ssl-pinning).
  No native certificate pinning in debug builds.
-->
<network-security-config>
    <!-- Allow cleartext for localhost (Metro bundler) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <!-- Allow user-installed certificates in debug builds -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Allow localhost for Metro bundler -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">10.0.3.2</domain>
    </domain-config>
</network-security-config>
