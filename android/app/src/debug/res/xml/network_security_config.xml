<?xml version="1.0" encoding="utf-8"?>
<!--
  Network Security Configuration for Debug Builds

  This config allows:
  - Self-signed backend certificate trusted globally (any IP/domain)
  - User-installed certificates for debugging with proxies
  - Cleartext for localhost/emulator IPs (Metro bundler)

  L1 uses JS-level pinning only (react-native-ssl-public-key-pinning).
  No native certificate pinning in debug builds.
-->
<network-security-config>
    <!-- Trust self-signed cert and user certs globally -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
            <certificates src="@raw/backend_cert" />
        </trust-anchors>
    </base-config>

    <!-- Allow cleartext for localhost/emulator (Metro bundler) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">10.0.3.2</domain>
    </domain-config>
</network-security-config>
